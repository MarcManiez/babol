{
  "extends": ["tslint:recommended"],
  "rulesDirectory": [
    "tslint-consistent-codestyle",
    "tslint-microsoft-contrib"
  ],
  "rules": {
    "arrow-parens": false,
    "curly": true,
    "eofline": true,
    "interface-name": false,
    "interface-over-type-literal": false,
    "jsx-boolean-value": false,
    "jsx-curly-spacing": false,
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "jsx-wrap-multiline": false,
    "max-comment-line-length": true,
    "member-access": false,
    "naming-convention": [true,
      {"type": "enumMember", "format": "StrictPascalCase"},
      {"type": "function", "format": ["strictCamelCase", "StrictPascalCase"]},
      {"type": "genericTypeParameter", "format": null},
      {"type": "member", "format": "strictCamelCase"},
      {"type": "property", "modifiers": "static", "format": ["strictCamelCase", "UPPER_CASE"]},
      {"type": "type", "format": "StrictPascalCase"}
    ],
    "new-parens": true,
    "no-angle-bracket-type-assertion": false,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-console": [true, "log"],
    "no-debugger": true,
    "no-duplicate-imports": true,
    "no-empty-line-after-opening-brace": true,
    "no-irregular-whitespace": true,
    "no-switch-case-fall-through": true,
    "object-literal-key-quotes": false,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": false,
    "radix": true,
    "semicolon": [true, "never"],
    "space-within-parens": [true, 0],
    "trailing-comma": false,
    "triple-equals": true,
    "whitespace": [true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-preblock",
      "check-rest-spread",
      "check-separator",
      "check-type",
      "check-type-operator"
    ]
  }
}
